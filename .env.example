# Supabase (server-side - service role for admin operations)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Supabase (client-side - public, for browser)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# GitHub OAuth (for user authentication)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# NextAuth
AUTH_SECRET=generate-with-openssl-rand-base64-32

# Access Control
ALLOWED_GITHUB_USERS=username1,username2

# API Key (for programmatic access, e.g., bots)
API_KEY=generate-a-secure-random-key
